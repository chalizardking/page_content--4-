// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Preferences
  preferredLanguage String @default("en")
  voicePreference   String?
  theme            String  @default("dark")
  
  // Relations
  videos        Video[]
  assistants    Assistant[]
  conversations Conversation[]
  credits       Credit[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Assistant {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  persona     String   // JSON stringified persona config
  voiceId     String?
  avatar      String?
  model       String   @default("gemini-pro")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]
}

model Video {
  id            String      @id @default(cuid())
  userId        String
  title         String
  description   String?
  prompt        String
  language      String      @default("en")
  
  // Video metadata
  duration      Int?        // seconds
  thumbnailUrl  String?
  videoUrl      String?
  status        String      @default("PLANNED") // PLANNED, PROCESSING, RENDERING, COMPLETED, FAILED
  
  // Generation data
  segments      String      // JSON stringified array of segment plans
  script        String?     // JSON stringified full script with timings
  generationLog String?     // JSON stringified processing logs
  
  // Analytics
  viewCount     Int         @default(0)
  completionRate Float?
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  completedAt   DateTime?
  
  // Relations
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Conversation {
  id           String   @id @default(cuid())
  userId       String
  assistantId  String?
  title        String
  messages     String   // JSON stringified array of message objects
  context      String?  // JSON stringified contextual data
  isArchived   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assistant Assistant? @relation(fields: [assistantId], references: [id], onDelete: SetNull)
}

model Credit {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  type      String   // PURCHASE, BONUS, USAGE, REFUND
  reason    String?
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
